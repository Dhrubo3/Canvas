<%- include('partials/header') %>

    <div class="d-flex flex-column p-5 m-3">
        <% for (var i = 0; i < quiz.length; i++){ %>
            <h2 class="text-center"><%=quiz[i].name%></h2>
            <h3 class="text-center">Due: <%= quiz[i].closeDate.toLocaleString() %></h3>
            <div class="text-center mt-3">
                <% if (quiz[i].mcqs.length > 0){ %>
                    <a href="/<%=contentId%>/<%=quiz[i].id%>/performmcq" class="btn btn-primary ms-2 me-2">Answer MCQ</a>
                <% } %>
                <% if (quiz[i].Voices.length > 0){ %>
                    <a href="/<%=contentId%>/<%=quiz[i].id%>/performviva" class="btn btn-primary ms-2 me-2">Answer Viva</a>
                <% } %>
                <% if (quiz[i].texts.length > 0){ %>
                    <a href="/<%=contentId%>/<%=quiz[i].id%>/performtext" class="btn btn-primary ms-2 me-2">Answer Text</a>
                <% } %>
            </div>
            <hr class="mt-4">
        <% } %>
    </div>

<%- include('partials/footer') %>
<%- include('partials/header') %>

    <div class="h-100 d-flex align-items-center justify-content-center p-5">
        <form action="/<%=cohortId%>/uploadcontent" method="post" enctype="multipart/form-data" class="w-50">
            <div class="form-group d-flex">
                <label for="contentName" class="col-sm-2 col-form-label">Content Name</label>
                <input type="text" name="contentName" class="form-control" id="contentName" placeholder="Name Your Cohort">
            </div>
            <div class="form-group d-flex mt-4">
                <label for="dateTime" class="col-sm-2 col-form-label">Closing Date</label>
                <input type="datetime-local" name="dueDateTime" class="form-control" id="dateTime" min="2022-11-24T21:30"> <span class="validity"></span>
            </div>
            <div class="mb-5 d-flex mt-5 ">
                <input type="file" id="formFile" name="uploadFile" class="form-control" accept=".pdf" style="width: 50%">
            </div>
            <button type="submit" class="btn btn-primary w-25"> Assign Reading Material </button>
        </form>
    </div>

<%- include('partials/footer') %>
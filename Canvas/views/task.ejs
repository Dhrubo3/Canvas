<%- include('partials/header') %>

  <%- include('partials/navbar', {user: user}) %>
  

  <div class="container-fluid col-9 p-0" style="margin-top: 80px;">
      
    <div class="d-flex">
      <div class="col-md-8 mb-2">
        <h4><%= task.name %></h4>
        <p> Due: <%= task.closeDate.toLocaleString() %></p>
      </div>
      <% if(user.userType === "Teacher"){ %>
        <div class="col-sm-2 mt-4 me-2">
          <a href="/<%=contentId%>/readingreport" class="btn btn-primary w-100"> Reading Report </a>
        </div>
        <div class="col-sm-1 mt-4 me-2">
          <a href="/<%=task.id%>/quiz" class="btn btn-primary w-100"> Quizzes </a>
        </div>
        <div class="col-sm-1 mt-4">
          <a href="/<%=task.id%>/edittask" class="btn btn-primary w-100"> Edit Task </a>
        </div>
      <% } %>
    </div>
    <hr class="mt-3">

    <% if(user.userType === "Teacher"){ %>
      <embed class="mb-5" src="/uploads/<%=task.fileName%>" type="application/pdf" style="width: 100%; height: 80%;">
    <%} else {%>
      <div class="d-flex justify-content-center top-center">
        <div class="row justify-content-md-center">  
          <a href="/task/<%=contentId%>/page/1/section/top" class="btn btn-lg btn-primary mt-5 mb-5"> Start Reading </a>
          <a href="/task/<%=contentId%>/performquiz" class="btn btn-primary col-6"> Take Quizzes </a>
        </div>
      </div>
    <% } %>
    
    

<%- include('partials/header') %>

    <div class="h-100 d-flex align-items-center justify-content-center p-5">
        <form action="/newcohort" method="post" class="w-50">
            <div class="form-group d-flex">
                <label for="title" class="col-sm-2 col-form-label">Title*</label>
                <input type="text" name="title" class="form-control" id="title" placeholder="Name Your Cohort">
            </div>
            <div class="form-group d-flex mt-4">
                <label for="description" class="col-sm-2 col-form-label">Description*</label>
                <input type="text" name="description" class="form-control" id="description" placeholder="Provide a short description">
            </div>
            <div class="form-group d-flex mt-4">
                <label for="select" class="col-sm-2 col-form-label">Select Students*</label>
                <select id="select" name="students" multiple placeholder="Select Students" data-search="true" data-silent-initial-value-set="true">
                    <% for (var i = 0; i < students.length; i++) {%>
                        <option value="<%= students[i].id %>"><%= students[i].user.name %> &nbsp;&nbsp; (<%= students[i].user.email %>) </option>
                    <%}  %> 
                </select>
            </div>
            <div class="form-group d-flex mt-5 row">
                <p class="col-12">(Optional) Select your previously created cohorts to include them under this new Cohort</p>
                <div class="d-flex">    
                    <label for="select" class="col-sm-2 col-form-label">Select Cohorts</label>
                    <select id="select" name="cohorts" multiple placeholder="Select Cohorts" data-search="true" data-silent-initial-value-set="true">
                        <% for (var i = 0; i < cohorts.length; i++) {%>
                            <option value="<%= cohorts[i].id %>"><%= cohorts[i].title %> &nbsp;&nbsp; Created On: <%= cohorts[i].createdAt.toLocaleString() %> </option>
                        <%}  %> 
                    </select>
                </div>
            </div>
            <button type="submit" class="btn btn-primary w-25 mt-5"> Create Cohort </button>
        </form>
    </div>



<%- include('partials/footer') %>